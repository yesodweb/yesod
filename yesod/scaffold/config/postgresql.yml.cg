Default: &defaults
  user: ~project~
  password: ~project~
  host: localhost
  port: 5432
  database: ~project~
  poolsize: 10

Development:
  <<: *defaults

Testing:
  database: ~project~_test
  <<: *defaults

Staging:
  database: ~project~_staging
  poolsize: 100
  <<: *defaults

Production:
  database: ~project~_production
  poolsize: 100
  <<: *defaults
